<style>
    p {
        margin-bottom: 0
    }
    h2 {
        margin-bottom: 5px
    }
    h3 {
        margin-bottom: 5px
    }
</style>
<section>
    <div class="container">
        <div class="row">
            <div class="box-static box-border-top padding-6">
                <div class="box-title">
                    <h3 class="size-20">Player Stats</h3>
                    <p>@ViewBag.Title</p>
                </div>
                <div id="groupStats" class="table-responsive">
                    Loading...
                </div>
            </div>
        </div>
        <div class="divider divider-center"></div>
        <div class="row">
            <div class="box-static box-border-top padding-6">
                <div class="box-title">
                    <h3 class="size-20">Player Death Stats</h3>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <h3>You killed...</h3>
                        <div id="playerKills" class="table-responsive">
                            Loading...
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h3>You were killed by:</h3>
                        <div id="playerKilledBy" class="table-responsive">
                            Loading...
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h3>You died because of...</h3>
                        <div id="playerDeaths" class="table-responsive">
                            Loading...
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="divider divider-center"></div>
        <div class="row">
            <div class="box-static box-dark box-border-top padding-6">
                <div class="box-title margin-bottom-30">
                    <h2 class="size-20">Player Achievements</h2>
                </div>
                <div id="playerAchievement" class="table-responsive">
                    Loading...
                </div>

            </div>
        </div>
    </div>


</section>


<script>

    function wait(ms) {
        var start = new Date().getTime();
        var end = start;
        while (end < start + ms) {
            end = new Date().getTime();
        }
    };

    function loadCSS(href) {

        var cssLink = $("<link>");
        $("head").append(cssLink); //IE hack: append before setting href

        cssLink.attr({
            rel:  "stylesheet",
            type: "text/css",
            href: href
        });
        var group = false;
        var player = false;
        var global = false;
        var id = 0;
    };
    var id = @ViewBag.Id;


    $('#groupStats').html('Loading...');

    $.ajax({
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: { pid: id },
        url: '/Stats/PlayerStats/',
        error: function (error) {
            console.log(error);
            $('#groupStats').html(error);
        },
        success: function (d) {
            $('#groupStats').html(d);
        }
    });

    $.ajax({
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: { pid: id },
        url: '/Stats/PlayerAchievements/',
        error: function (error) {
            console.log(error);
            $('#playerAchievement').html(error);
        },
        success: function (d) {
            $('#playerAchievement').html(d);
        }
    });

    $.ajax({
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: { pid: id },
        url: '/Stats/PlayerKills/',
        error: function (error) {
            console.log(error);
            $('#playerKills').html(error);
        },
        success: function (d) {
            $('#playerKills').html(d);
        }
    });

    $.ajax({
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: { pid: id },
        url: '/Stats/PlayerKilledBy/',
        error: function (error) {
            console.log(error);
            $('#playerKilledBy').html(error);
        },
        success: function (d) {
            $('#playerKilledBy').html(d);
        }
    });

    $.ajax({
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: { pid: id },
        url: '/Stats/PlayerDeaths/',
        error: function (error) {
            console.log(error);
            $('#playerDeaths').html(error);
        },
        success: function (d) {
            $('#playerDeaths').html(d);
        }
    });

