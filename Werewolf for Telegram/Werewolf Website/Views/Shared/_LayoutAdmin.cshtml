    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body class="min">

    <div id="wrapper" class="clearfix">



        <aside id="aside">
            <nav id="sideNav">
                <ul class="nav nav-list">
                    <li class="@{
                                   if (ViewContext.RouteData.Values["controller"].ToString() == "AdminApi")
                                   {
                                       <text>active</text>
                                   }
                               } el_primary" id="el_0">
                        <a class="dashboard" href="@Url.Action("Index","AdminApi")">
                            <i class="main-icon fa fa-dashboard"></i><span>Dashboard</span>
                        </a>
                    </li>
                    <li class="el_primary" id="el_1">
                        <a href="#">
                            <i class="fa fa-menu-arrow pull-right"></i>
                            <i class="main-icon fa fa-code"></i> <span>Bots</span>
                        </a>
                        <ul id="botList">
                            <li>
                                <a href="@Url.Action("Bot","AdminApi",new {name = "werewolfbot"})">
                                    
                                    <i class="fa fa-paper-plane-o"></i>
                                    Bot 1
                                </a>
                                
                            </li>
                            <li>
                                <a href="@Url.Action("Bot","AdminApi",new {name = "werewolfIIbot"})">

                                    <i class="fa fa-paper-plane-o"></i>
                                    Bot 2
                                </a>
                                
                            </li>
                            <li>
                                <a href="@Url.Action("Bot","AdminApi",new {name = "werewolfbetabot"})">

                                    <i class="fa fa-paper-plane-o"></i>
                                    Beta Bot
                                </a>
                                
                            </li>
                        </ul>
                    </li>
                    <li class="@{
                                   if (ViewContext.RouteData.Values["controller"].ToString() == "GlobalBans")
                                   {
                                       <text>active</text>
                                   }
                               } el_primary" id="el_1">
                        <a href="@Url.Action("Index","GlobalBans")">
                            <i class="main-icon fa fa-ban"></i> <span>Global Bans</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <span id="asidebg"></span>

        </aside>

        <!-- HEADER -->
        <header id="header">

            <!-- Mobile Button -->
            <button id="mobileMenuBtn"></button>

            <!-- Logo -->
            <span class="logo pull-left">
                <img src="/images/werewolf title.png" alt="admin panel" height="35" />
            </span>

            <form method="get" action="@Url.Action("Search","AdminApi")" class="search pull-left hidden-xs">
                <input type="text" class="form-control" name="query" placeholder="Search for a game..." />
            </form>
        </header>
        <!-- /HEADER -->


        <section id="middle" style="margin-left: 0px;">
            <div id="content" class="dashboard padding-20">
                @RenderBody()
            </div>
        </section>
        <!-- SCROLL TO TOP -->
        <a href="#" id="toTop"></a>


        <!-- PRELOADER -->
        <div id="preloader">
            <div class="inner">
                <span class="loader"></span>
            </div>
        </div><!-- /PRELOADER -->

    </div>
    @try
